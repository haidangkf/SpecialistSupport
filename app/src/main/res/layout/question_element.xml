<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:text="2 febbraio 2016"
        android:id="@+id/data"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/grey_white"
        android:gravity="center_vertical"/>

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/image"
        android:src="@drawable/questions_list_default_48dp"
        android:tint="@color/grey_white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageView4"
        android:src="@drawable/ic_menu_favorite"
        android:layout_alignTop="@+id/data"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Come posso porre una domanda intelligente, scritta bene, e magari grammaticalmente corretta all'interno di Aiutami ?"
        android:id="@+id/domanda"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image"
        android:layout_marginBottom="24dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textSize="20dp"/>
</RelativeLayout>